<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == true %>
      <li><input type="checkbox" checked> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% else %>
      <li><input type="checkbox"> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to "+ Add a new task", newtask_path %>
